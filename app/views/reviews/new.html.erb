
<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>

  <h3>Add a Review for <strong><%= @restaurant.name %></strong> </h3>
    <span><strong>Rating*</strong></span> <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
    <%= f.input :content %>
    <%= f.submit "add a review", class: "btn btn-primary" %>


  <% end %>

</div>
