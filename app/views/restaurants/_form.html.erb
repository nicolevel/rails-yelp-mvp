
  <%= simple_form_for [@restaurant] do |f| %>
  <div class = "container">

  <h1>Restaurant Info</h1>

  <div class="form-group">
    <%= f.input :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong>Category:</strong> <%= f.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
  </div>

  <div class="form-group">
    <%= f.input :phone_number, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<hr>
  <div class = "container">
    <%= link_to restaurants_path do %>
      <i class="fa fa-history"></i> Back to list
    <% end %>
  </div>
